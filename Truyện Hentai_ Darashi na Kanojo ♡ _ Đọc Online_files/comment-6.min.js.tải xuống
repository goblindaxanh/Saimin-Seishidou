function replyAction(o,t,e,n){$.post("reply-load.php",{replyid:o,replyname:t,replyuser:e,replynoti:n},function(t){$("html, body").animate({scrollTop:$(".reply-"+o+"s").offset().top-150},0),$(".reply-"+o+"s").html(t),document.getElementById("reply-"+o+"s").focus()})}function showAction(o,t,e,n){$.post("show-comment.php",{showid:o,showtype:t,idchuthot:e,idphothot:n},function(e){$("#"+o+"_"+t+"s").html(e)})}$(document).ready(function(){$("button[type='submit']").click(function(){var o=$("textarea[name='reply-1']").val();$("input[name='noti']").val();if(""==o)return alert("Bạn chưa nhập nội dung bình luận!"),!1;$("#form_comment").css("display","none"),$(".img-loading-cmt").css("height","112px");var t=$("form#form_comment").serialize();return $.ajax({type:"POST",url:"comment.php",data:t,success:function(o){$(".post-comment-wrap").html(o),$(".emobox").hide()}}),!1})}),$(function(){var o=$("#button");o.click(function(){o.hasClass("close")?(o.removeClass("close"),jQuery(".emobox").toggle("show")):(o.addClass("close"),$(".emobox").toggle())})});